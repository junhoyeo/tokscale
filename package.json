{
  "name": "token-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "Calculate token prices from OpenCode and Claude Code sessions",
  "type": "module",
  "workspaces": [
    "core",
    "frontend",
    "benchmarks"
  ],
  "bin": {
    "token-tracker": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsx src/cli.ts",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "build:core": "yarn workspace @token-tracker/core build",
    "build:core:debug": "yarn workspace @token-tracker/core build:debug",
    "build:core:release": "yarn workspace @token-tracker/core build",
    "build:frontend": "yarn workspace @token-tracker/frontend build",
    "dev:frontend": "yarn workspace @token-tracker/frontend dev",
    "bench:generate": "tsx benchmarks/generate.ts",
    "bench:ts": "tsx benchmarks/runner.ts",
    "bench:ts:synthetic": "tsx benchmarks/runner.ts --synthetic --iterations 5 --warmup 1",
    "bench:rust": "tsx benchmarks/runner.ts --implementation rust",
    "bench:rust:synthetic": "tsx benchmarks/runner.ts --implementation rust --synthetic --iterations 5 --warmup 1"
  },
  "dependencies": {
    "@token-tracker/core": "0.1.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "csv-parse": "^5.6.0",
    "date-fns": "^4.1.0",
    "picocolors": "^1.1.1",
    "string-width": "^8.1.0"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.4.1",
    "@opencode-ai/plugin": "^1.0.128",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
